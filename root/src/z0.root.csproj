<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(TopDir)/shared/TypeCodes.cs" />
  </ItemGroup>

  <PropertyGroup>
    <ProjectFolder>$[System.IO.Path]::GetFileName($(MSBuildThisFileDirectory))</ProjectFolder>
  </PropertyGroup>

  <Target Name="Diagnostic">
    <Message Text="ProjectFolder = $(ProjectFolder)" Importance="high" />
  </Target>

  <ItemGroup>
    <ProjectReference Include="$(TopDir)monadic/src/z0.monadic.csproj" />
    <ProjectReference Include="$(TopDir)reflections/src/z0.reflections.csproj" />
  </ItemGroup>

</Project>
